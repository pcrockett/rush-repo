# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{css,hcl,html,json,less,md,xml,xsl,yml}]
indent_size = 2

[{Makefile,makefile,GNUmakefile}]
indent_style = tab

[*.cue]
indent_style = tab
